<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cb2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Cfragment2">


        <TextView
            android:id="@+id/textView15"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/opensansbold"
            android:text="Select Train Category"
            android:textAlignment="center"
            android:textColor="#021f54"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="245dp"
            android:layout_height="47dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Enter Number of Tickets For Economy class"
            android:textColor="#021f54"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/custeco"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.951" />


        <EditText
            android:id="@+id/custeco"
            android:layout_width="189dp"
            android:layout_height="64dp"
            android:layout_marginLeft="192dp"
            android:layout_marginStart="192dp"
            android:layout_marginTop="192dp"
            android:ems="10"
            android:hint="Economy Class"
            android:inputType="number"
            android:textColor="#021f54"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/date"
            android:layout_width="160dp"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="Select Date"
            android:textColor="#021f54"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="237dp"
            android:layout_height="332dp"
            android:layout_marginLeft="144dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="412dp"
            android:clickable="true"
            android:showWeekNumber="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="234dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="280dp"

            android:text="Enter Number of Tickets For Business class"
            android:textColor="#021f54"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/custbusinees"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="36dp"

            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:hint="Business Class"
            android:inputType="number"
            android:textColor="#021f54"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/date"
            app:layout_constraintEnd_toEndOf="@+id/calendar"
            app:layout_constraintStart_toEndOf="@+id/date"
            app:layout_constraintTop_toTopOf="@+id/textView17" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button4"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/calendar" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginLeft="76dp"
            android:layout_marginStart="76dp"
            android:background="@drawable/mybutton"
            android:text="Next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="90dp"
            android:layout_marginLeft="89dp"
            android:layout_marginRight="90dp"
            android:layout_marginStart="89dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/mybutton"
            android:text="Cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/calendar"
            app:layout_constraintTop_toTopOf="@+id/textView27" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>