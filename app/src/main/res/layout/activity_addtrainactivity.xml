<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/opensansbold"
        android:text="Add Train"
        android:textAlignment="center"
        android:textColor="#021f54"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="11dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:text="Train Number"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toStartOf="@+id/chassisID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chassisID" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="13dp"
        android:layout_marginStart="23dp"
        android:text="Manufacturer"
        android:textColor="@color/blue"
        app:layout_constraintBaseline_toBaselineOf="@+id/ManufacturerID"
        app:layout_constraintEnd_toStartOf="@+id/ManufacturerID"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Operator"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="@+id/textView22"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="No. of Carriages"
        android:textColor="@color/blue"
        app:layout_constraintBaseline_toBaselineOf="@+id/NumberOfCarriagesID"
        app:layout_constraintEnd_toStartOf="@+id/NumberOfCarriagesID" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="Route ID"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <Button
        android:id="@+id/OkbuttonID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/mybutton"
        android:text="Ok"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/CancelbuttonID"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/mybutton"
        android:text="Cancel"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/chassisID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Enter Chassis Number"
        android:inputType="textPersonName"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toTopOf="@+id/ManufacturerID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <EditText
        android:id="@+id/ManufacturerID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:ems="10"
        android:hint="Manufacturer's Name"
        android:inputType="textPersonName"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView18"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OperatorID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Operator's Name"
        android:inputType="textPersonName"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ManufacturerID" />

    <EditText
        android:id="@+id/NumberOfCarriagesID"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Number of Carriages"
        android:inputType="number"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/OperatorID" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="Business Class Capacity "
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/businessCapID" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:text="Economy Class Capacity"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/EcoCapID"
        app:layout_constraintEnd_toEndOf="@+id/textView21"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/CancelbuttonID" />

    <EditText
        android:id="@+id/businessCapID"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:layout_marginEnd="36dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="36dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:hint="Capacity"
        android:inputType="number"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/OkbuttonID"
        app:layout_constraintEnd_toEndOf="@+id/RuutID"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView23"
        app:layout_constraintTop_toBottomOf="@+id/OperatorID"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/EcoCapID"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Capacity"
        android:inputType="number"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="@+id/RuutID"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/businessCapID" />

    <Spinner
        android:id="@+id/RuutID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="3dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="70dp"
        android:spinnerMode="dialog"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/businessCapID"
        app:layout_constraintEnd_toEndOf="@+id/OperatorID"
        app:layout_constraintStart_toStartOf="@+id/NumberOfCarriagesID"
        app:layout_constraintTop_toBottomOf="@+id/OperatorID" />

</android.support.constraint.ConstraintLayout>